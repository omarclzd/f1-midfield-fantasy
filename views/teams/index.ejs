</aside>
<main class="col s6">

  
     <div>
       <% if (driverData) { %>
        <div class="row center #ffe57f amber accent-1">
            <div class="col s4">
              <h5>Season: <%= driverData.season %></h4>
            </div>
            <div class="col s4">
                <h5>Circuit: <%= driverData.raceName %></h4>
            </div>
            <div class="col s4">
              <h5>Round: <%= driverData.round %></h4>
            </div>
        </div>
        <div class="row center">
            <h5>Results</h5>
            <table class="striped">
              <thead>
                <tr>
                  <th>Position</th>
                  <th>Driver</th>
                  <th>Team</th>
                  <th>Status</th>
                  <th>Fastest Lap</th>
                  <th>Points</th>
                </tr>
              </thead>
              <% driverData.Results.forEach(function(i) { %>
                  <tr>
                    <td><%= i.position %></td>
                    <td><%= i.Driver.familyName %></td>
                    <td><%= i.Constructor.name %></td>
                    <td><%= i.status %></td>
                    <td><%= i.FastestLap.Time.time %></td>
                    <td><%= i.points %></td>
                  </tr>
             <% }); %>
            </table>

        </div>
         
 	    <% } else { %>
 	      <h3>
 	        No Data!
 	      </h3>
 	    <% } %>
     </div>
 

